<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPassword"
    android:background="@drawable/foodbackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="351dp"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            android:textAlignment="center"
            android:text="Enter your registered mobile number and email below:"
            android:textColor="#ad1457"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etMobileNumberforgot"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Mobile Number(10 digits)"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:textColorHint="#FFFBF8" />
        <EditText
            android:id="@+id/etMailforgot"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFFBF8" />
        <Button
            android:id="@+id/btnNext"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnpink"
            android:text="Next"
            android:textColor="#FFFBF8" />
</LinearLayout>

</LinearLayout>