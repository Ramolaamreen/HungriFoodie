<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OverActivity"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/orderSuccessfullyPlaced">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/tickk"
            android:layout_centerInParent="true"
            android:id="@+id/tick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your order has been successfully placed"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tick"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonok"
                android:text="OK"
                android:textColor="#fff"
                android:layout_margin="2dp"
                android:background="@drawable/btnpink"
                android:textSize="20sp"
                />
        </RelativeLayout>


</RelativeLayout>
</RelativeLayout>